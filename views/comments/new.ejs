<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= thriftstore.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form method="POST" action="/thriftstores/<%= thriftstore._id %>/comments">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/thriftstores">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>